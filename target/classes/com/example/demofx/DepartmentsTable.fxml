<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="393.0" prefWidth="502.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demofx.DepartmentsTableController">
   <children>
      <TableView fx:id="departmentsTable" layoutX="-1.0" layoutY="1.0" prefHeight="276.0" prefWidth="503.0">
        <columns>
          <TableColumn fx:id="departmentNameColumn" prefWidth="129.0" text="Department name" />
          <TableColumn fx:id="departmentNumberColumn" minWidth="8.0" prefWidth="136.0" text="Department number" />
            <TableColumn fx:id="managerSsnColumn" prefWidth="93.0" text="Manager SSN" />
            <TableColumn fx:id="mgrStartDateColumn" prefWidth="146.0" text="Manager's start date" />
        </columns>
      </TableView>
      <Button fx:id="seeEmployeeButton" layoutY="305.0" mnemonicParsing="false" onMouseClicked="#getEmployeeInfo" text="See Employee" textAlignment="CENTER" />
      <Button fx:id="deleteDepartmentButton" layoutX="107.0" layoutY="305.0" mnemonicParsing="false" onMouseClicked="#deleteDepartment" text="Delete department" textFill="#cd1717" />
      <Button fx:id="editDepartmentButton" layoutX="242.0" layoutY="305.0" mnemonicParsing="false" onMouseClicked="#editDepartment" text="Edit department " textFill="#0f80c6" />
      <Button fx:id="createNewEmployeeButton" layoutX="361.0" layoutY="305.0" mnemonicParsing="false" onMouseClicked="#createNewEmployee" text="Create new department" textAlignment="CENTER" textFill="#21a428" />
   </children>
</AnchorPane>
